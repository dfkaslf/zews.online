    </section>

    <!-- УСЛУГИ -->
    <section class="services" id="services">
        <div class="container">
            <h2 class="section-title">Мои услуги</h2>
            <div class="services-grid">
                <div class="service-card">
                    <div class="service-img" style="background-image: url('https://images.unsplash.com/photo-1598300042247-d088f8ab3a91?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80');"></div>
                    <div class="service-content">
